# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized
*.c text
*.h text
*.cpp text
*.hpp text
*.py text eol=lf
*.sh text eol=lf

# Ensure all Markdown files use LF
*.md text eol=lf

# Ensure JSON and YAML files use LF
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
